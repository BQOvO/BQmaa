{
    "interface_version": 2,
    "name": "BQMaaDNA",
    "description": "这是一个BQ使用 MaaFramework 创建的二重螺旋自动化脚本。",
    "contact": "QQ群: 123456789",
    "license": "MIT",
    "welcome": "首次使用！欢迎使用 BQMaaDNA!",
    // 填写项目地址和版本号可实现自动更新功能
    "github": "https://github.com/BQOvO/BQmaa",
    "version": "1.0.4",
    // Mirror酱为第三方分发服务，新项目默认关闭
    // 若有需要请联系 Mirror酱 开通，直接自行开启是无法使用的
    // "mirrorchyan_rid": "MaaXXX",
    // "mirrorchyan_multiplatform": true,
    "controller": [
        {
            "name": "模拟器",
            "type": "Adb",
            "display_short_side": 720 // 默认缩放分辨率的短边长度
        }
    ],
    "resource": [
        {
            "name": "模拟器",
            "path": [
                "./resource"
            ]
        }
    ],
    "task": [
        {
            "name": "魔之楔驱离",
            "entry": "quli",
            "option": ["魔之楔挑战等级"],
            "default_check": false,
            "description": "黎瑟主控，按键布局为官方默认第一套，注意：黎瑟需要一定练度"
        }
    ],
    "option": {
        "魔之楔挑战等级":{
            "type": "select",
            "label": "$魔之楔挑战等级",
            "default_case": "Lv.40",
            "cases": [
                {
                    "name": "Lv.40",
                    "pipeline_override": {
                        "quli": {
                            "next": "quli40"
                        }
                    }
                },
                {
                    "name": "Lv.60",
                    "pipeline_override": {
                        "quli":{
                            "next": "quli60"
                        }
                    }
                },
                {
                    "name": "Lv.80",
                    "pipeline_override": {
                        "quli":{
                            "next": "quli80"
                        }
                    }
                },
                {
                    "name": "Lv.100",
                    "pipeline_override": {
                        "quli":{
                            "next": "quli100"
                        }
                    }
                }
            ]
        }
    }
}